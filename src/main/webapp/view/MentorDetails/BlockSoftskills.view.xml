			<core:Item key="{Id}" text="{Name}" />
		</Select>

		<Label text="{i18n>skill} 6" visible="{= !!${SoftSkill6Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{SoftSkill6/Name}" visible="{= !!${SoftSkill6Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Label text="{i18n>skill} 6" visible="{ui>/isEditMode}" />
		<Select	selectedKey="{SoftSkill6Id}"
					id="select-softSkill6"
				   visible="{ui>/isEditMode}"
				   forceSelection="false"
				   items="{ path: '/SoftSkills', sorter: { path: 'Name' } }">
			<core:Item key="{Id}" text="{Name}" />
		</Select>

	</forms:SimpleForm>
</mvc:View>

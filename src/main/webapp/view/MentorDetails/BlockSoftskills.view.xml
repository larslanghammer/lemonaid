<mvc:View
		controllerName="com.sap.mentors.lemonaid.controller.BaseBlock"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns="sap.m">

	<forms:SimpleForm
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="4"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			maxContainerCols="2" layout="ResponsiveLayout"
			width="100%">

		<core:Title text="{i18n>softSkills}" />
        <Text text="Make Soft Skills public:" visible="{= ${ui>/isEditMode}/>
		<Switch id="switch-softSkillsPublic" state="{SoftSkillsPublic}" visible="{= ${ui>/isEditMode} }" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" />
		<Label text="" visible="{= !${SoftSkill1Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{i18n>nodata}" visible="{= !${SoftSkill1Id}  &amp;&amp; !${ui>/isEditMode}}" />

		<Label text="{i18n>skill} 1" visible="{= !!${SoftSkill1Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{SoftSkill1/Name}" visible="{= !!${SoftSkill1Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Label text="{i18n>skill} 1" visible="{ui>/isEditMode}" />
		<Select	selectedKey="{SoftSkill1Id}"
					id="select-softSkill1"
				   visible="{ui>/isEditMode}"
				   forceSelection="false"
				   items="{ path: '/SoftSkills', sorter: { path: 'Name' } }">
			<core:Item key="{Id}" text="{Name}" />
		</Select>

		<Label text="{i18n>skill} 2" visible="{= !!${SoftSkill2Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{SoftSkill2/Name}" visible="{= !!${SoftSkill2Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Label text="{i18n>skill} 2" visible="{ui>/isEditMode}" />
		<Select	selectedKey="{SoftSkill2Id}"
					id="select-softSkill2"
				   visible="{ui>/isEditMode}"
				   forceSelection="false"
				   items="{ path: '/SoftSkills', sorter: { path: 'Name' } }">
			<core:Item key="{Id}" text="{Name}" />
		</Select>

		<Label text="{i18n>skill} 3" visible="{= !!${SoftSkill3Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{SoftSkill3/Name}" visible="{= !!${SoftSkill3Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Label text="{i18n>skill} 3" visible="{ui>/isEditMode}" />
		<Select	selectedKey="{SoftSkill3Id}"
					id="select-softSkill3"
				   visible="{ui>/isEditMode}"
				   forceSelection="false"
				   items="{ path: '/SoftSkills', sorter: { path: 'Name' } }">
			<core:Item key="{Id}" text="{Name}" />
		</Select>

		<Label text="{i18n>skill} 4" visible="{= !!${SoftSkill4Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{SoftSkill4/Name}" visible="{= !!${SoftSkill4Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Label text="{i18n>skill} 4" visible="{ui>/isEditMode}" />
		<Select	selectedKey="{SoftSkill4Id}"
					id="select-softSkill4"
				   visible="{ui>/isEditMode}"
				   forceSelection="false"
				   items="{ path: '/SoftSkills', sorter: { path: 'Name' } }">
			<core:Item key="{Id}" text="{Name}" />
		</Select>

		<Label text="{i18n>skill} 5" visible="{= !!${SoftSkill5Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Text text="{SoftSkill5/Name}" visible="{= !!${SoftSkill5Id}  &amp;&amp; !${ui>/isEditMode}}" />
		<Label text="{i18n>skill} 5" visible="{ui>/isEditMode}" />
		<Select	selectedKey="{SoftSkill5Id}"
					id="select-softSkill5"

<mvc:View
	controllerName="com.sap.mentors.lemonaid.controller.BaseBlock"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<UploadCollection
			id="UploadCollection"
			beforeUploadStarts="onBeforeUploadStarts"
			uploadComplete="onUploadComplete"
			fileDeleted="onFileDeleted"
			items="{Attachments}"
			uploadEnabled="{MayEdit}"
            uploadButtonInvisible="{!MayEdit}"
			showSeparators="All"
			multiple="true"
			mode="MultiSelect"
			uploadUrl="{ui>/UploadUrl}">
		<toolbar>
			<OverflowToolbar id="UploadCollectionTools" >
				<Title id="attachmentTitle"/>
                <Text text="Make Attachments Public" visible="{ui>/isEditMode}"/>
				<Switch id="switch-attachmentsPublic" state="{AttachmentsPublic}" visible="{= ${ui>/isEditMode} }" customTextOn="{i18n>yes}" customTextOff="{i18n>no}" />
				<ToolbarSpacer/>
				<Button id="downloadButton" text="Download" press="onDownloadItems" type="Transparent"></Button>
				<UploadCollectionToolbarPlaceholder></UploadCollectionToolbarPlaceholder>
			</OverflowToolbar>
		</toolbar>
		<items>
			<UploadCollectionItem
				id="UploadCollectionItem"
				fileName="{FileName}"
				mimeType="{MimeType}"
				url="{ui>/ServiceUrl}/Attachments('{Id}')/$value"
				visibleEdit="false">
				<attributes>
					<ObjectAttribute
						title="Size"
						text="{
							path: 'FileSize',
							type: 'sap.ui.model.type.Float'
						}"/>
					<ObjectAttribute
						title="Modified"
						text="{
								path: 'LastModified',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: {
									relativeScale: 'auto'
								}
							}"/>
				</attributes>
			</UploadCollectionItem>
		</items>
	</UploadCollection>

</mvc:View>

<core:FragmentDefinition
	xmlns="openui5.googlemaps"
	xmlns:core="sap.ui.core">
    <Map
    	id="map"
    	height="100%"
    	width="100%"
    	lat="20"
    	zoom="3"
    	zoomControl="true"
    	markers="{
			path: '/Mentors',
			parameters: {
				select: 'Id,FullName,ShirtNumber,PhotoUrl,PublicLatitude,PublicLongitude,MentorStatus/Id',
				expand: 'MentorStatus'
			}
		}">
        <markers>
            <Marker
            	lat="{PublicLatitude}"
            	lng="{PublicLongitude}"
            	info="{
					parts: [
						'FullName',
						'ShirtNumber',
						'PhotoUrl',
						'MentorStatus/Id'
					],
					formatter: '.formatters.formatMapInfo'
				}"
            	icon="images/pin-{= ${MentorStatus/Id} === 'active' ? 'mentor' : 'alumni' }.svg"
            	click='.onMarkerClick' />
        </markers>
    </Map>
</core:FragmentDefinition>

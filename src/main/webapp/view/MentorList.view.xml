<mvc:View
	controllerName="com.sap.mentors.lemonaid.controller.MentorList"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	height="100%">

	<IconTabBar
		id="iconTabBar"
		select="onQuickFilter"
		expandable="false"
		stretchContentHeight="true"
		applyContentPadding="false">
		<items>
			<IconTabFilter
				key="all"
				showAll="true"
				count="{i18n>all}"
				text="{i18n>mentors}"/>
			<IconTabSeparator/>
			<IconTabFilter
				key="active"
				icon="sap-icon://person-placeholder"
				iconColor="Positive"
				count="{ui>/active}"
				text="{i18n>activeMentors}"/>
			<IconTabFilter
				key="alumni"
				icon="sap-icon://person-placeholder"
				iconColor="Default"
				count="{ui>/alumni}"
				text="{i18n>alumni}"/>
			<IconTabFilter
				key="program"
				icon="sap-icon://person-placeholder"
				iconColor="Negative"
				count="{ui>/program}"
				text="{i18n>program}"/>
			<IconTabSeparator class="sapUiVisibleOnlyOnDesktop" />
			<IconTabFilter
				key="bandVegas"
				icon="sap-icon://microphone"
				iconColor="Positive"
				count="{ui>/bandVegas}"
				text="{i18n>bandVegas}"/>
			<IconTabFilter
				key="bandBcn"
				icon="sap-icon://microphone"
				iconColor="Default"
				count="{ui>/bandBcn}"
				text="{i18n>bandBcn}"/>
                <IconTabFilter
 				key="notpublic"
 				icon="sap-icon://private"
 				iconColor="Negative"
 				count="{ui>/notpublic}"
 				text="{i18n>notpublic}"
 				visible="{= ${config>/IsMentor} || ${config>/IsProjectMember} }"/>
		</items>
		<content>
			<l:ResponsiveSplitter defaultPane="default">
				<l:PaneContainer>
					<l:SplitPane requiredParentWidth="0" id="default">
						<core:Fragment fragmentName="com.sap.mentors.lemonaid.view.MentorList.Table" type="XML"/>
						<l:layoutData>
							<l:SplitterLayoutData
								size="{= ${device>/system/desktop} ? '33%' : null }" />
						</l:layoutData>
					</l:SplitPane>
					<l:SplitPane requiredParentWidth="800" demandPane="false">
						<core:Fragment fragmentName="com.sap.mentors.lemonaid.view.MentorList.Map" type="XML"/>
					</l:SplitPane>
				</l:PaneContainer>
			</l:ResponsiveSplitter>
		</content>
	</IconTabBar>

</mvc:View>
